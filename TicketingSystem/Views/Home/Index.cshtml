@model IEnumerable<TicketingSystem.Models.Tickets>

@{
    ViewData["Title"] = "Tickets";
}

<div class="card">
    <div class="card-header">
        Tickets
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-sm table-responsive">
            <thead>
               
                <tr>
                    <th scope="col"> @Html.DisplayNameFor(model => model.Id)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.Subject)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.Description)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.DateRasied)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row"><a href="#">@item.Id</a> </th>
                    <td><a href="#">@item.Subject</a></td>
                    <td><a href="#">@item.Description</a></td>
                    <td><a href="#">@item.DateRasied</a></td>
                    <td><a href="#">@Html.ActionLink("View","Index","History", new { id=item.Id})</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div>
            <button class="btn btn-info"> New Ticket</button>
        </div>
    </div>

</div>