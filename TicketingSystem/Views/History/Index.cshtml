@model IEnumerable<TicketingSystem.Models.TicketHistory>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        Ticket History:
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-sm table-responsive">
            <thead>

                <tr>
                    <th scope="col"> @Html.DisplayNameFor(model => model.Id)</th>
                    <th scope="col"> @Html.DisplayNameFor(model => model.Comments)</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row"><a href="#">@item.Id</a> </th>
                        <td><a href="#">@item.Comments</a></td>
                      
                    </tr>
                }
            </tbody>
        </table>
    </div>
   

</div>

